<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_select_account">

    <fragment
        android:id="@+id/nav_enter_pin"
        android:name="de.app.ui.account.login.AccountEnterPINFragment"
        android:label="Enter PIN"
        tools:layout="@layout/fragment_login_enter_pin" >
        <argument
            android:name="accountId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_select_account"
        android:name="de.app.ui.account.select.SelectAccountFragment"
        android:label="Select Account"
        tools:layout="@layout/fragment_login_select_account" >
        <action
            android:id="@+id/action_nav_select_to_enter_pin"
            app:destination="@id/nav_enter_pin"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_nav_select_to_register"
            app:destination="@id/nav_register_account"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_register_account"
        android:name="de.app.ui.account.register.AccountRegisterFragment"
        android:label="Register Account"
        tools:layout="@layout/fragment_login_register_account">
        <action
            android:id="@+id/action_nav_register_to_successful"
            app:destination="@id/nav_register_account_result" />
    </fragment>
    <fragment
        android:id="@+id/nav_register_account_result"
        android:name="de.app.ui.account.register.RegisterResultFragment"
        android:label="Register Result"
        tools:layout="@layout/fragment_login_register_result">
        <argument
            android:name="accountId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_nav_result_to_register"
            app:destination="@id/nav_register_account" />
        <action
            android:id="@+id/action_nav_result_to_enter_pin"
            app:destination="@id/nav_enter_pin" />
    </fragment>

</navigation>