<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.LoginNewSessionActivity">

        <TextView
            android:id="@+id/name"
            android:layout_width="360dp"
            android:layout_height="42dp"
            android:layout_marginTop="68dp"
            android:gravity="center"
            android:text="@string/login_greet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/private_business_switch"
            android:layout_width="202dp"
            android:layout_height="128dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/priv_bus_id_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintVertical_bias="0.931" />

        <EditText
            android:id="@+id/priv_bus_id_input"
            android:layout_width="185dp"
            android:layout_height="69dp"
            android:layout_marginTop="212dp"
            app:layout_constraintBottom_toTopOf="@+id/change_acc_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="120dp"
            android:layout_height="82dp"
            app:layout_constraintBottom_toTopOf="@+id/change_acc_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/priv_bus_id_input"
            app:layout_constraintVertical_bias="0.419" />

        <Button
            android:id="@+id/change_acc_button"
            android:layout_width="120dp"
            android:layout_height="82dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintVertical_bias="0.839" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>